<!DOCTYPE html>
<html>
  <head>
    <!-- settings -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">

    <!-- title -->
    <title>
      <%= appName %>
      <% if (clientType !== defaultType) { %>| <%= clientType %><% } %>
    </title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="<%= assetsDomain %>css/main.css?<%= version %>">
    <link rel="stylesheet" href="<%= assetsDomain %>css/tuner.css">
    <link rel="stylesheet" href="<%= assetsDomain %>css/app.css">
  </head>

  <body>
    <div id="container" class="container">
      <!-- for new tuner -->
      <div id="Tuner"></div>

      <!-- for old tuner -->
      <!--Tuner() relies on this being classed as tuner, with canvas inside-->
      <div class="tuner" width="100" height="699">
        <canvas width="199" height="699"></canvas>
      </div>

      <!-- text -->
      <div id="poem" width="100" height="400" style="margin-left: 50px; margin-top: 100px; padding-bottom: 20px; font-family: Arial, sans-serif;">
        ozymandias
      </div>
    </div>

    <!-- pass configuration to the client -->
    <script>
    window.CONFIG = {};
    window.CONFIG.SOCKET_CONFIG = JSON.parse('<%- socketIO %>');
    window.CONFIG.APP_NAME = '<%- appName %>';
    window.CONFIG.VERSION = '<%- version %>';
    </script>
    <script src="<%= assetsDomain %>lib/jquery-1.12.3.min.js"></script>
    <script src="<%= assetsDomain %>lib/dsp.js"></script>
    <script src="<%= assetsDomain %>lib/underscore.js"></script>
    <script src="<%= assetsDomain %>lib/tuner_modified.js"></script>
    <script src="<%= assetsDomain %>js/<%= clientType %>.js?<%= version %>"></script>


  </body>
</html>
